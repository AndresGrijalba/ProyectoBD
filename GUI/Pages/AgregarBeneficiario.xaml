<Page x:Class="GUI.Pages.AgregarBeneficiario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgregarBeneficiario"
      Background="White">

    <StackPanel Margin="20">
        <Label Content="Número de identificación del estudiante:" />
        <TextBox Name="txtIdentificacion" Width="200" />
        <Button Content="Buscar Estudiante" Click="BuscarEstudiante_Click" Width="200" Margin="0,10,0,0" />

        <Label Content="Nombre del estudiante:" Margin="0,20,0,0" />
        <Label Name="lblNombreEstudiante" Content="" Margin="0,5,0,0" FontWeight="Bold" />

        <Label Content="Seleccione el tipo de ayuda:" Margin="0,20,0,0" />
        <ComboBox Name="cmbTipoAyuda" IsEnabled="False" Width="200" SelectionChanged="CmbTipoAyuda_SelectionChanged" />

        <Button Content="Registrar Ayuda" Name="btnRegistrar" IsEnabled="False" Click="RegistrarAyuda_Click" Width="200" Margin="0,20,0,0" />
    </StackPanel>
</Page>
