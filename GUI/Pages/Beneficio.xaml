<Page x:Class="GUI.Pages.Beneficio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Factura"
      Background="White">

    <Grid>
        <TextBox x:Name="txtNombre" Width="200" Height="25" Margin="10,10,0,0" Text="Nombre del Beneficio"/>
        <Button Content="Guardar" Width="75" Height="25" Margin="10,45,0,0" Click="Guardar_Click"/>

        <ListBox x:Name="lbBeneficios" Margin="10,80,10,10"/>
    </Grid>
</Page>
